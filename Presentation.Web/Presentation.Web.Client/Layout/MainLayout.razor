@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase

<div class="page">
    <!-- ... NavMenu и т.д. ... -->
    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <span class="text-light">Hello, @context.User.FindFirst("http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name")?.Value</span>
                    <a href="/logout">Log out</a>
                </Authorized>
                <NotAuthorized>
                    <a href="/register">Register</a>
                    <a href="/login">Log in</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>